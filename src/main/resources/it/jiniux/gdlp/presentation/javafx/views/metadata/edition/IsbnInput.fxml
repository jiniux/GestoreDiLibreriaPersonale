<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.jiniux.gdlp.presentation.javafx.controllers.shared.metadata.edition.IsbnInputController"
      spacing="5">
    <Label text="%field_isbn" styleClass="field-label"/>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="isbnField" promptText="%field_isbn_prompt" HBox.hgrow="ALWAYS"/>
    </HBox>
    <Label fx:id="isbnValidationLabel" style="-fx-text-fill: red" styleClass="validation-label"/>
</VBox>
