<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.jiniux.gdlp.presentation.javafx.controllers.DashboardController"
            prefWidth="600.0" prefHeight="400.0">

    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu text="File" mnemonicParsing="false">
                <MenuItem text="%new_book_menu_item" mnemonicParsing="false" onAction="#onNewBookClick"/>
                <MenuItem text="%search_book_menu_item" mnemonicParsing="false"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <GridPane fx:id="gridContainer"
                  hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <fx:include source="Book.fxml"
                        GridPane.rowIndex="0" GridPane.columnIndex="0"
                        style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 10;"/>

        </GridPane>
    </center>
</BorderPane>
