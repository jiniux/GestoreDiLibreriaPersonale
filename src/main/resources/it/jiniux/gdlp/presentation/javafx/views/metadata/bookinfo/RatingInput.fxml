<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.jiniux.gdlp.presentation.javafx.controllers.shared.metadata.bookinfo.RatingInputController"
            maxWidth="Infinity">
    <VBox AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          maxWidth="Infinity" spacing="5">
          
        <Label fx:id="labelText" text="%field_rating" styleClass="form-label"/>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Slider fx:id="ratingSlider" min="1" max="5" value="3" 
                    majorTickUnit="1" minorTickCount="0" 
                    snapToTicks="true" showTickMarks="true" showTickLabels="true" 
                    prefWidth="300"/>
            <Label fx:id="ratingValueLabel" text="3"/>
        </HBox>
        
        <Label fx:id="errorLabel" style="-fx-text-fill: red;" visible="false" managed="false"
               maxWidth="Infinity"/>
    </VBox>
</AnchorPane>
