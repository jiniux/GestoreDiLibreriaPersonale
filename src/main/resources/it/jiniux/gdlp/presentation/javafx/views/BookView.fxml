<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.jiniux.gdlp.presentation.javafx.controllers.BookViewController">
    <center>
        <StackPane>
            <TableView fx:id="tableView" maxWidth="Infinity" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="titleColumn" prefWidth="150" text="Title" />
                    <TableColumn fx:id="authorColumn" prefWidth="150" text="Authors" />
                    <TableColumn fx:id="ratingColumn" prefWidth="100" text="Rating" />
                    <TableColumn fx:id="statusColumn" prefWidth="100" text="Reading status" />
                    <TableColumn fx:id="genreColumn" prefWidth="100" text="Genres" />
                </columns>
            </TableView>
            <Label fx:id="loadingLabel" alignment="CENTER" style="-fx-font-size: 15px; -fx-font-weight: bold;" text="%loading" />
        </StackPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="prevPageButton" text="&lt;" onAction="#handlePreviousPage" />
            <Label fx:id="pageInfoLabel" text="1/1" style="-fx-font-weight: bold;" />
            <Button fx:id="nextPageButton" text="&gt;" onAction="#handleNextPage" />
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>

