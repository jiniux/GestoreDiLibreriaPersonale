<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.jiniux.gdlp.presentation.javafx.controllers.EditBookController">
    <top>
        <VBox>
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="%edit_book_header" />
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <TabPane fx:id="tabPane" maxHeight="Infinity" maxWidth="Infinity" tabClosingPolicy="UNAVAILABLE">
            <Tab closable="false" text="%tab_book_info">
                <fx:include fx:id="bookInfoForm" source="metadata/BookInfoForm.fxml" />
            </Tab>
            <Tab closable="false" text="%tab_editions">
                <fx:include fx:id="bookEditionsForm" source="metadata/BookEditionsForm.fxml" />
            </Tab>
        </TabPane>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <Separator />
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <HBox HBox.hgrow="ALWAYS" alignment="CENTER_LEFT">
                    <Button fx:id="removeButton" onAction="#handleRemove" text="%remove" styleClass="danger-button" />
                </HBox>
                <Label text="%saving" fx:id="savingLabel" visible="false" />
                <Button fx:id="saveButton" onAction="#handleSave" text="%save_button" />
                <Button fx:id="cancelButton" onAction="#handleCancel" text="%cancel_button" />
            </HBox>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </bottom>

</BorderPane>
