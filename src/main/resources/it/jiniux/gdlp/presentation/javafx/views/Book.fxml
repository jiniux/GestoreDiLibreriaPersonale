      fx:controller="it.jiniux.gdlp.presentation.javafx.controllers.BookController"
      spacing="10" prefWidth="318.0" prefHeight="400.0">

    <StackPane fx:id="imageContainer" VBox.vgrow="ALWAYS">
        <ImageView fx:id="coverImage"
                   pickOnBounds="true"
                   preserveRatio="false"/>
    </StackPane>

    <Label text="Alice nel paese delle meraviglie"
           alignment="CENTER"
           maxWidth="Infinity">
