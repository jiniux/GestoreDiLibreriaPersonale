    <Label text="Lewis Caroll"
           alignment="CENTER"
           maxWidth="Infinity">
        <font>
            <Font size="12.0"/>
        </font>
    </Label>

    <HBox alignment="CENTER" spacing="10" maxWidth="Infinity">
        <HBox alignment="CENTER"
              spacing="5"
              maxWidth="Infinity"
              HBox.hgrow="ALWAYS">
            <Label text="☆" style="-fx-font-size: 14px;"/>
            <Label text="☆" style="-fx-font-size: 14px;"/>
            <Label text="☆" style="-fx-font-size: 14px;"/>
            <Label text="☆" style="-fx-font-size: 14px;"/>
            <Label text="☆" style="-fx-font-size: 14px;"/>
        </HBox>

        <Label text="LETTO"
               alignment="CENTER"
               maxWidth="100"        prefWidth="200">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <padding>
            <Insets top="5.0" right="10.0" bottom="5.0" left="10.0"/>
        </padding>
    </HBox>
</VBox>